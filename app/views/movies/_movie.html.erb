<h2 class="title is-2">
  <% if show_link %>
    <%= link_to movie.title, movie%>
  <% else %>
    <%= movie.title %>
  <% end %>
</h2>

<article class="message is-dark">
  <div class="message-header">
    <p>Description</p>
  </div>
  <div class="message-body">
    <%= movie.description %>
  </div>
</article>

<progress id="progress is-info" value="<%= movie.average_vote %>" max="10">
  <%= movie.average_vote %>
</progress>

<p>
  <strong>Genre: </strong>
  <%= movie.genres_list %>
</p>
<p>
  <strong>Rating: </strong>
  <%= movie.average_vote %>
</p>

<p>
  <strong>Year: </strong>
<%= movie.year %>
</p>

<p>
  <strong>Duration: </strong>
<%= movie.duration %>
</p>

<p>
  <strong>Production Company: </strong>
  <%= link_to movie.production_company.name, movie.production_company %>
</p>

<hr>